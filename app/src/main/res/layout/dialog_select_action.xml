<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/main_dialog"
    android:scaleX="0.0"
    android:scaleY="0.0"
    android:alpha="0"
    android:translationY="500dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textStyle="bold"
                android:gravity="center"
                android:text="Select Action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_value_dialog"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Hello - webboi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginTop="20dp"
                android:background="#81818181"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <TextView
                android:id="@+id/bt_delete_dialog"
                android:focusable="true"
                android:clickable="true"
                android:textSize="16sp"
                android:textColor="#D50000"
                android:gravity="center"
                android:text="Delete"
                android:layout_width="match_parent"
                android:layout_height="45dp" />
            <View
                android:background="#81818181"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <TextView
                android:id="@+id/bt_edit_dialog"
                android:focusable="true"
                android:clickable="true"
                android:textSize="16sp"
                android:textColor="#2962FF"
                android:gravity="center"
                android:text="Edit"
                android:layout_width="match_parent"
                android:layout_height="45dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:id="@+id/bt_cancel_dialog"
            android:textStyle="bold"
            android:focusable="true"
            android:clickable="true"
            android:textSize="18sp"
            android:textColor="#2962FF"
            android:gravity="center"
            android:text="Cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>